{
  "constants": {
    "module": "skitzaApp"
  },
  "commands": [
    {
      "command": "controller",
      "help": "Generate new controller from template",
      "short_help": "new controller",
      "arguments": [
        {"name": "name", "help": "controller name"},
        {"name": "description", "help": "controller description"}
      ],
      "templates": [
        {
          "source": "/home/vova/src/skitza/examples/angular/controller.js.jinja",
          "destination": "/home/vova/src/skitza/examples/angular/{{name|first_upper}}ControllerCode.js"
        },
        {
          "source": "/home/vova/src/skitza/examples/angular/controller.js.jinja",
          "destination": "/home/vova/src/skitza/examples/angular/{{name}}ControllerSpec.js"
        }
      ]
    },
    {
      "command": "state",
      "arguments": [
        {"name": "name", "help": "state name"}
      ],
      "templates": [
        {
          "directory": "{{skitza.cwd}}/state/{{name}}"
        },
        {
          "source": "/home/vova/src/skitza/examples/angular/controller.js.jinja",
          "destination": "{{skitza.env.PWD}}/state/{{name}}/{{name}}Controller.js"
        },
        {
          "source": "/home/vova/src/skitza/examples/angular/controller.js.jinja",
          "destination": "/home/vova/src/skitza/examples/angular/state/{{name}}/{{name}}ControllerSpec.js"
        }
      ]
    }
  ]
}

